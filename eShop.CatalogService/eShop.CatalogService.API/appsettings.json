{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "TopicName": "catalog-items"
  },
  "Keycloak": {
    "AuthorizationUrl": "http://localhost:8080/realms/eshop/protocol/openid-connect/auth"
  },
  "Authentication": {
    "Jwt": {
      "RequireHttpsMetadata": false,
      "Audience": "account",
      "Authority": "http://localhost:8080",
      "MetadataAddress": "http://localhost:8080/realms/eshop/.well-known/openid-configuration",
      "TokenValidationParameters": {
        "ValidIssuers": [ "account", "http://localhost:8080/realms/eshop", "http://localhost:8080", "http://localhost:8080/*", "http://keycloak:8080" ]
      }
    }
  },
  "AllowedHosts": "*"
}
